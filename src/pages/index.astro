<script>
  //Progress bar animation///////////////////////////////////////////////
  import { inView, animate, scroll, timeline } from "motion";
  scroll(animate(".progress", { strokeDasharray: ["0,1", "1,1"] }));

  //entrance animation//////////////////////////////////////////////////
  animate("body", { opacity: [0, 1] }, { duration: 1 });

  //entrance animation med lidt mere konplekse///////////////////////////
  animate(".mereanimate", { opacity: [0, 1, 0.8, 1], scale: [0.3, 1], y: [0, -10, 0, 10, 0], x: [0, -20, 0, 20, 0], rotate: [0, 360], filter: ["blur(0px)", "blur(5px)", "blur(0px)"] }, { delay: 1.5, duration: 3, direction: "alternate", repeat: Infinity, easing: "ease-in-out" });

  //inview animation////////////////////////////////////////////
  const slideLeft = document.querySelectorAll(".slideLeft");
  inView(slideLeft, ({ target }) => {
    target.classList.add("animate__animated", "animate__rollIn", "animate__delay-1s");
  });

  // stagger animation////////////////////////////////////////////
  inView("#stagger", () => {
    // 모든 staggeranimation 클래스 요소에 대해 애니메이션 적용
    const elements = document.querySelectorAll(".staggeranimation");
    elements.forEach((element, index) => {
      animate(
        element,
        { opacity: [0, 1] }, // 애니메이션 속성
        {
          delay: index * 0.5, // 요소마다 지연 시간 설정
          duration: 0.5, // 애니메이션 지속 시간
        }
      );
    });
  });

  /* Timeline animation */ ///////////////////////////////////////////////
  inView("#timelineanimationimage", () => {
    const timelineanimation = [
      [".timelineanimation", { transform: "translateY(50%)" }, { duration: 0.5 }],
      [".timelineanimation", { transform: "translateY(0)" }, { duration: 0.5 }],
      [".timelineanimation", { opacity: 0 }, { duration: 0.5 }],
      [".timelineanimation", { opacity: 1 }, { duration: 0.5 }],
      [".timelineanimation", { transform: "scale(0.5)" }, { duration: 0.5 }],
      [".timelineanimation", { transform: "rotate(180deg)" }, { duration: 0.5 }],
      [".timelineanimation", { transform: "scale(1)" }, { duration: 0.5 }],
      [".timelineanimation", { boxShadow: "5px 5px 10px rgba(0, 0, 0, 0.5)" }, { duration: 0.5 }],
    ];
    timeline(timelineanimation);
  });
  inView("#timelineanimationimage2", () => {
    const timelineanimation2 = [
      [".timelineanimation2", { transform: "translateY(-20%)" }, { duration: 0.5 }],
      [".timelineanimation2", { transform: "translateY(0)" }, { duration: 0.5 }],
      [".timelineanimation2", { opacity: 0 }, { duration: 0.5 }],
      [".timelineanimation2", { opacity: 1 }, { duration: 0.5 }],
      [".timelineanimation2", { transform: "scale(0.5)" }, { duration: 0.5 }],
      [".timelineanimation2", { transform: "rotate(-180deg)" }, { duration: 0.5 }],
      [".timelineanimation2", { transform: "scale(1)" }, { duration: 0.5 }],
      [".timelineanimation2", { boxShadow: "5px 5px 10px rgba(0, 0, 0, 0.5)" }, { duration: 0.5 }],
    ];

    timeline(timelineanimation2);
  });

  /* inView & return */
  inView(".inviewreturn", ({ target }) => {
    animate(target, { rotate: [180, 0] }, { delay: 1, duration: 2 });
    return () => {
      animate(target, { rotate: 180 });
    };
  });

  //Stickyparallax tekst animation////////////////////////////////////////////
  scroll(animate(".stickyparallax1", { y: [-300, 0] }), {
    target: document.querySelector(".stickyparallax1"),
  });

  /* Mange elementer der animerer ind */
  inView(".mangeelementerinview", () => {
    animate(".mangeelementer1", { x: [-2000, 0], y: [-50, 0] }, { duration: 1 });
    animate(".mangeelementer2", { x: [-1500, 0], y: [-100, 0] }, { duration: 3 });
    animate(".mangeelementer3", { x: [-1000, 0], y: [-150, 0] }, { duration: 3 });

    return () => {
      animate(".mangeelementer1", { x: [-2000, 0], y: [-50, 0] }, { duration: 1 });
      animate(".mangeelementer2", { x: [-1500, 0], y: [-100, 0] }, { duration: 3 });
      animate(".mangeelementer3", { x: [-1000, 0], y: [-150, 0] }, { duration: 3 });
    };
  });

  /* Horisontal scroll sektion */
  scroll(
    animate("#horisontalliste", {
      transform: ["none", "translateX(-500vw)"],
    }),
    { target: document.querySelector("#horisontalscrollsection") }
  );
  /* Scroll zoom sektion */
  scroll(
    animate(".scrollzoomimg", {
      scale: [1, 1.5],
    }),
    {
      target: document.querySelector(".scrollzoom"),
      offset: ["0.75 end", "end end"],
    }
  );
</script>
